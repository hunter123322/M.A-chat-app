// client.js
socket.emit('getUserData', { userId: '123' }, (response) => {
  console.log('Server responded:', response); // This is like the response (res)
});


// server.js
io.on('connection', (socket) => {
  socket.on('getUserData', (data, callback) => {
    console.log('Request data:', data); // This is like the request (req)
    
    // Simulate fetching data and send it back
    const userData = { id: data.userId, name: 'Alice' };
    callback(userData); // This is like sending res
  });
});


